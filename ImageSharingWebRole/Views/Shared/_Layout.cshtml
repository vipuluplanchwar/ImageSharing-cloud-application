<!DOCTYPE html>

<html lang="en">
<head id="head">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <title> @ViewBag.Title </title>

    @*
    @Styles.Render("~/Content/css")
    *@

    @{
        var SiteCss = ViewBag.isAda ? "Site_ADA.css" : "Site.css";
        var SiteCssUrl = Url.Content("~/Content/" + SiteCss); 
    }
    <link href="@SiteCssUrl" rel="stylesheet" type="text/css" />

    @*
    @Scripts.Render("~/bundles/modernizr")
    *@

    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")"></script>

</head>

<body class="twoColumnHdrFtr">
    <div id="container">
        <header id="header">
            <h1><img style="width:100%" alt="[Jive Talkin' Choirboy]" src="@Url.Content("~/Images/RESNvT.jpg")" /></h1>
        </header>
        
        <nav id="nav">
            <ul>
                <li>@Html.ActionLink("Register", "Register", "Account")</li>
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                <li>@Html.ActionLink("Upload","Upload", "Image")</li>
                <li>@Html.ActionLink("List All", "ListAll", "Image")</li>
                <li>@Html.ActionLink("List by User", "ListByUser", "Image")</li>
                <li>@Html.ActionLink("List by Tag", "ListByTag", "Image")</li>
                <li>@Html.ActionLink("List Queue", "ListUploadQueue", "Image")</li>
                @*<li>@Html.ActionLink("Query", "Query", "Image")</li>*@
                <li>@Html.ActionLink("Deactivate", "Deactivate", "Account")</li>
                <li>@Html.ActionLink("Approve", "Approve", "Image")</li>
                <li>@Html.ActionLink("Supervise", "ImageList", "Image")</li>
            </ul>
        </nav>
        
        <aside id="sidebar">
            <h1>Links</h1>
            <p><a href="http://www.books-arena.com">My Bookstore</a></p>
            <p><a href="http://www.stevens.edu">Stevens home page</a></p>
        </aside>
        <article id="content">
            @RenderBody()
        </article>
        <footer id="footer">
             <p>&copy; @DateTime.Now.Year Vipul's Image_Uploading Facility</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
